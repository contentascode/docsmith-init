{
  "name": "docsmith-init",
  "version": "0.0.1",
  "description": "Empty project for docsmith",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "jekyll build -d $CONFIG_REPO",
    "test": "npm run build && echo \"Do some validations...\" && npm run test-links",
    "test-links": "pm2 start `which hs` -- -p 8080 . && blc -r --input http://127.0.0.1:8080/$CONFIG_REPO",
    "deploy": "npm run deploy-clone && npm run deploy-prepare && npm run deploy-push",
    "deploy-clone": "echo https://github.com/$CONFIG_OWNER/$CONFIG_REPO.git && echo https://github.com/${CONFIG_OWNER}/${CONFIG_REPO}.git && git clone --branch 'gh-pages' https://github.com/${CONFIG_OWNER}/${CONFIG_REPO}.git build",
    "deploy-prepare": "cp -R _site/* build && cd build && git config user.email \"$GIT_EMAIL\" && git config user.name \"$GIT_NAME\" && git add -A . && git commit -a -m \"Travis build $TRAVIS_BUILD_NUMBER.\"\n",
    "deploy-push": "git push --quiet 'https://$GH_USERNAME:$GH_TOKEN@github.com/$CONFIG_OWNER/$CONFIG_REPO.git' gh-pages \n"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contentascode/docsmith-init.git"
  },
  "author": "Jun Matsushita (iilab.org)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/contentascode/docsmith-init/issues"
  },
  "homepage": "https://github.com/contentascode/docsmith-init#readme"
}